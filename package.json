{
  "name": "howto-react-native-ui",
  "private": true,
  "repository": "git@howtosave.github.com:howtosave/howto-react-native-ui.git",
  "author": "peterhs.kang <peterhs.kang@gmail.com>",
  "license": "MIT",
  "scripts": {
    "js": "yarn workspace expo-js",
    "react-navigation": "yarn workspace expo-react-navigation",
    "dev": "expo start ./expo-js --android",
    "build:sb": "lerna run sb:build --scope expo-web-components",
    "lint": "eslint \"app-*/**/*.{js,ts,tsx}\"",
    "types": "tsc --noEmit --composite false",
    "test": "jest --passWithNoTests",
    "clean": "lerna run clean",
    "build": "lerna run prepack",
    "publish": "lerna publish",
    "release": "run-s clean build publish"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/generator": "^7.15.4",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.6.3",
    "eslint": "^7.27.0",
    "eslint-config-satya164": "^3.1.10",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "lerna": "^5.4.3",
    "prettier": "^2.3.0",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "expo": "~47.0.8",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5"
  },
  "engines": {
    "yarn": "3.2.2",
    "node": ">=18"
  },
  "packageManager": "yarn@3.2.2",
  "workspaces": {
    "packages": [
      "expo-*"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-iphone-x-helper)/)"
    ],
    "moduleNameMapper": {
      "@react-navigation/([^/]+)": "<rootDir>/packages/$1/src",
      "@copper/([^/]+)": "<rootDir>/libs/$1/src"
    },
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "packages/"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
